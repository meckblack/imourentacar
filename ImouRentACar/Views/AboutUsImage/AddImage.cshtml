@model ImouRentACar.Models.AboutUsImage

@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h2>
                ADD ABOUT US IMAGE
            </h2>
        </div>
        <div class="box-body">
            <form asp-action="AddImage" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="control-label col-md-2">
                        <label> Image</label>
                    </div>
                    <div class="col-md-10">
                        <input class="form-control" type="file" name="file" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="control-label col-md-2">
                        <label> Heading</label>
                    </div>
                    <div class="col-md-10">
                        <input asp-for="Heading" class="form-control " />
                        <span asp-validation-for="Heading" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="control-label col-md-2">
                        <label> Body</label>
                    </div>
                    <div class="col-md-10">
                        <textarea asp-for="Body" class="form-control "></textarea>
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="">
                    <div class="row pull-right">
                        <div class="col-md-12">
                            <input type="hidden" value="blank" asp-for="Image" />
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a class="btn btn-danger" asp-action="Index" asp-controller="Landing">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

