@model ImouRentACar.Models.AboutUsImage

@{ 
    ViewData["Title"] = "View Image";
    Layout = null;
}

<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-widget">
                <div class="box-body">
                    <img class="img-responsive pad" src="~/UploadedFiles/AboutUs/@Html.DisplayFor(model => model.Image)" alt="Logo" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-sm btn-primary" data-modal="dismiss">Cancel</a>
</div>