@model ImouRentACar.Models.ApplicationUser

@{
    ViewData["Title"] = "Change Pasword";
    Layout = null;
}

<!-- Content Header (Page header) -->
<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3> <strong> CHANGE PASSWORD </strong> </h3>
</div>

<form asp-action="ChangePassword">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ApplicationUserId" type="hidden" />
    <input asp-for="LastName" type="hidden" />
    <input asp-for="FirstName" type="hidden" />
    <input asp-for="Email" type="hidden" />
    <input asp-for="RoleId" type="hidden" />
    <input asp-for="DateCreated" type="hidden" />
    <input asp-for="CreatedBy" type="hidden" />


    <!--MODAL BODY-->
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-6">
                    <label>NEW PASSWORD</label>
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label>CONFIRM PASSWORD</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <!--MODAL FOOTER-->
    <div class="modal-footer">
        <div class="row pull-right">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


