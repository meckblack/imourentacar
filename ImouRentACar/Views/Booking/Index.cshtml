@model IEnumerable<ImouRentACar.Models.Booking>
@using ImouRentACar.Models.Enums

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
    var x = 1;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        BOOKINGS
    </h1>
    <ol class="breadcrumb" style="padding-bottom: 10px">
        <li><a asp-controller="Admin" asp-action="Dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active">Bookings</li>
    </ol>


</section>

<!-- Main content -->
<section class="content">
    @if (TempData["booking"] != null)
    {
        if (TempData["notificationType"].Equals(NotificationType.Success.ToString()))
        {
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                @TempData["booking"]
            </div>
        }
        else if (TempData["notificationtype"].Equals(NotificationType.Error.ToString()))
        {
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                @TempData["booking"]
            </div>
        }
        else if (TempData["notificationtype"].Equals(NotificationType.Info.ToString()))
        {
            <div class="alert alert-info alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                @TempData["booking"]
            </div>
        }

    }
    <!-- Default box -->
    <div class="box">
        <div class="box-body">
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th>
                            S/N
                        </th>
                        <th>
                            Request Booking Date
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @(x++)
                            </td>
                            <td>
                                @item.DateSent
                            </td>
                            <td>
                                @if (item.Verification == Verification.YetToReply || item.Verification == Verification.Disapprove)
                                {
                                    <a class="btn btn-success btn-sm" data-modal="" asp-action="Approve" asp-route-id="@item.BookingId"><i class="fa fa-check "></i> Approve</a>
                                    <a class="btn btn-info btn-sm" data-modal="" asp-action="Details" asp-route-id="@item.BookingId"><i class="fa fa-book "></i> Details</a>
                                }
                                @if (item.Verification == Verification.Approve && item.DriverId == 0)
                                {
                                    <a class="btn btn-success btn-sm" data-modal="" asp-action="Disapprove" asp-route-id="@item.BookingId"><i class="fa fa-cog "></i> Disapprove</a>
                                    <a class="btn btn-warning btn-sm" data-modal="" asp-action="AssignDriver" asp-route-id="@item.BookingId"><i class="fa fa-user "></i> Assign Driver</a>
                                    <a class="btn btn-info btn-sm" data-modal="" asp-action="Details" asp-route-id="@item.BookingId"><i class="fa fa-book "></i> Details</a>
                                }
                                @if (item.Verification == Verification.Approve && item.DriverId != 0)
                                {
                                    <a class="btn btn-success btn-sm" data-modal="" asp-action="Disapprove" asp-route-id="@item.BookingId"><i class="fa fa-cog "></i> Disapprove</a>
                                    <a class="btn btn-warning btn-sm" data-modal="" asp-action="RemoveDriver" asp-route-id="@item.BookingId"><i class="fa fa-user "></i> Remove Driver</a>
                                    <a class="btn btn-warning btn-sm" data-modal="" asp-action="SendLink" asp-route-id="@item.BookingId"><i class="fa fa-user "></i> Send Link</a>
                                    <a class="btn btn-info btn-sm" data-modal="" asp-action="Details" asp-route-id="@item.BookingId"><i class="fa fa-book "></i> Details</a>
                                }

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

<script src="~/Admin/bower_components/jquery/dist/jquery.js"></script>
<script src="~/Modal/Modal.js"></script>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            columnDefs: [
                {
                    targets: [0, 1, 2],
                    className: 'dataTable'
                }
            ]
        });
    });
</script>
