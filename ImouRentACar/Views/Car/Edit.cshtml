@model ImouRentACar.Models.Car

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->

<section class="content">
    <div class="box">
        <div class="box-header with-border">
            <h2>
                <strong> Edit Car </strong>
            </h2>
        </div>
        <div class="box-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <!--MODAL BODY-->
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-4">
                                <label>CAR BRAND</label>
                                <select asp-for="CarBrandId" class="form-control" asp-items="ViewBag.CarBrands">
                                    <option selected>--- Select A Car Brand ---</option>
                                </select>
                                <span asp-validation-for="CarBrand" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label>NAME</label>
                                <input asp-for="Name" class="form-control " placeholder="Name" />
                                <span asp-validation-for="CarBrand" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label>COLOR</label>
                                <select asp-for="Color" class="form-control" asp-items="new SelectList(Enum.GetValues(typeof(ImouRentACar.Models.Enums.Color)))"></select>
                                <span asp-validation-for="Color" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4">
                                <label>SPEED (KM/H)</label>
                                <input asp-for="Speed" class="form-control " placeholder="Speed (KM/H)" />
                                <span asp-validation-for="Speed" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label>Engine</label>
                                <input asp-for="Engine" class="form-control " placeholder="Engine" />
                                <span asp-validation-for="Engine" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label>Picture</label>
                                <input class="form-control" type="file" name="file" />
                                <span asp-validation-for="Image" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <label>QUICK DESCRIPTION</label>
                                <textarea asp-for="Description" class="form-control" placeholder="Quick Description"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label>PRICE &#8358 </label>
                                <input asp-for="Price" class="form-control " placeholder="Price (N)" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label>RENTAL PRICE &#8358 </label>
                                <input asp-for="RentalPrice" class="form-control " placeholder="Rental Price" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!--MODAL FOOTER-->
                <div class="modal-footer">
                    <div class="row pull-right">
                        <div class="col-md-12">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <input type="hidden" value="blank" asp-for="Image" />
                            <input type="hidden" asp-for="CarId" />
                            <input type="hidden" asp-for="CarBrandId" />
                            <input type="hidden" asp-for="CreatedBy" />
                            <input type="hidden" asp-for="DateCreated" />
                            <a class="btn btn-danger" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
