@model ImouRentACar.Models.Contact

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3> <strong> EDIT CONTACT DETAILS </strong> </h3>
</div>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ContactId" />
    <!--MODAL BODY-->
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="row">
                <div class="control-label col-md-2">
                    <label> Number 1</label>
                </div>
                <div class="col-md-10">
                    <input asp-for="MobileNumberOne" class="form-control " />
                    <span asp-validation-for="MobileNumberOne" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label> Number 2</label>
                </div>
                <div class="col-md-10">
                    <input asp-for="MobileNumberTwo" class="form-control " />
                    <span asp-validation-for="MobileNumberTwo" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label> P.O.BOX</label>
                </div>
                <div class="col-md-10">
                    <input asp-for="BoxOfficeNumber" class="form-control " />
                    <span asp-validation-for="BoxOfficeNumber" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="control-label col-md-2">
                    <label> Address</label>
                </div>
                <div class="col-md-10">
                    <input asp-for="Address" class="form-control " />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <!--MODAL FOOTER-->
    <div class="modal-footer">
        <div class="row pull-right">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


