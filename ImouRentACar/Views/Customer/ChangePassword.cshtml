@model ImouRentACar.Models.Customer
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/LandingLayout/_LandingLayout.cshtml";
}
<div class="allcontain" style="background-color: #473454">
    <div class="container" style="padding-bottom: 225px">
        <div class="feturedsection">
            <h1 style="font-size:40px; font-family: montserrat; text-align: center; color: white; text-shadow: 1px 1px 2px #473454, 0 0 25px #765c6c, 0 0 5px #765c6c;"
                class="text-center">
                &bullet; PASSWORD CHANGE &bullet;
            </h1>
        </div>
        <div class="row">
            <div class="col-md-offset-3 col-md-6 col-md-offset-3">
                <form asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CustomerId" />
                    <input type="hidden" asp-for="Title" />
                    <input type="hidden" asp-for="FirstName" />
                    <input type="hidden" asp-for="LastName" />
                    <input type="hidden" asp-for="Gender" />
                    <input type="hidden" asp-for="MobileNumber" />
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="MemberId" />

                    <div class="row">
                        <div class="col-md-6" style="padding-right: 5px;">
                            <label style="color: whitesmoke">PASSWORD</label>
                            <input asp-for="Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="col-md-6" style="padding-right: 5px;">
                            <label style="color: whitesmoke">COMFIRM PASSWORD</label>
                            <input asp-for="ConfrimPassword" class="form-control" placeholder="Comfirm Password">
                            <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <br />

                    <input type="submit" value="Save" class="btn btn-primary pull-right" />
                    <a asp-action="Index" asp-controller="Home" class="btn btn-danger ">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="footer">
    <div class="copyright">
        &copy; Copy right @DateTime.Now.Year | <a asp-action="Index" asp-controller="Policy">Policy </a>
    </div>
    <div class="atisda">
        Designed by <a href="#">meckblvck </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}