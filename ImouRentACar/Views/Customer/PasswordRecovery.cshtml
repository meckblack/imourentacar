@model ImouRentACar.Models.Customer

@{
    Layout = "~/Views/Shared/AuthenticationLayout/_AuthenticationLayout.cshtml";
}

<div class="login-logo">
    <a asp-action="Index" asp-controller="Home"><b>Imou</b> Rent A Car</a>
</div>
<!-- /.login-logo -->
<div class="login-box-body">
    <p class="login-box-msg">Password Recovery</p>
    <form asp-action="PasswordRecovery" asp-controller="Customer">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewData["customer"] != null && Convert.ToString(ViewData["customer"]) != " ")
        {
            <h5 style="padding-left:1em;" class="text-danger">@ViewData["customer"]</h5>
        }
        <div class="form-group has-feedback">
            <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email">
            <span asp-validation-for="Email" class="text-danger"></span>
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="checkbox icheck">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Enter</button>
                </div>
            </div>
        </div>
    </form>
</div>
<!-- /.login-box-body -->

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}