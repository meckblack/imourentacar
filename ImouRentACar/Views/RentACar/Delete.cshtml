@model ImouRentACar.Models.RentACar

@{
    ViewData["Title"] = "Delete";
    Layout = null;
}

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3> <strong> DELETE CAR RENTAL BOOKING </strong> </h3>
</div>


<!--MODAL BODY-->
<div class="modal-body">
    <h3 class="text-center"> Are you sure you want to delete this booking request ?</h3>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="CarId" />
    <input type="hidden" asp-for="RentACarId" />
    <input type="hidden" asp-for="DriverId" />
    <input type="hidden" asp-for="PassengerInformationId" />

    <!--MODAL FOOTER-->
    <div class="modal-footer">
        <div class="row pull-right">
            <div class="col-md-12">
                <input type="submit" value="Yes" class="btn btn-primary" />
                <a class="btn btn-danger" data-dismiss="modal">No</a>
            </div>
        </div>
    </div>
</form>

