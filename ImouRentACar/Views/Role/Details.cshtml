@model ImouRentACar.Models.Role

@{
    Layout = null;
}

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3> <strong> USER ROLE DETIALS </strong> </h3>
</div>

<div class="modal-body">
    <div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-4">
                        <b> Name </b>
                    </div>
                    <div class="col-md-8">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-8">
                        <b> Can Do Everything </b>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.CanDoEverything)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-8">
                        <b> Can Manage Customers </b>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.CanManageCustomers)
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-8">
                        <b>Can Mange Cars</b>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.CanManageCars)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-8">
                        <b> Can Manage Landing Details </b>
                    </div>
                    <div class="col-md-4">
                        @Html.DisplayFor(model => model.CanManageLandingDetails)
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-4">
                        <b>Creator</b>
                    </div>
                    <div class="col-md-8">
                        @ViewData["createdby"]
                    </div>
                </div>
            </div>
        </div>
        <h3>
            Added Information
        </h3>
        <br />
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <b> Created By </b>
                    </div>
                    <div class="col-md-6">
                        @ViewData["createdby"]
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-5">
                        <b>Date Created</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.DateCreated)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <b> Modified By </b>
                    </div>
                    <div class="col-md-6">
                        @ViewData["modifiedby"]
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-5">
                        <b>Date Modified</b>
                    </div>
                    <div class="col-md-7">
                        @Html.DisplayFor(model => model.DateLastModified)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--MODAL FOOTER-->
<div class="modal-footer">
    <div class="row pull-right">
        <div class="col-md-12">
            <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
        </div>
    </div>
</div>