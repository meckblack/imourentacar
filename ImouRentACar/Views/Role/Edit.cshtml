@model ImouRentACar.Models.Role

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<!--MODAL HEADER-->
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3> <strong> EDIT USER ROLE </strong> </h3>
</div>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoleId" />
    <input type="hidden" asp-for="CreatedBy" />
    <input type="hidden" asp-for="DateCreated" />
    <!--MODAL BODY-->
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12">
                    <label>NAME</label>
                    <input asp-for="Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <label>Manage Cars</label>
                    <input asp-for="CanManageCars" />
                </div>
                <div class="col-md-4">
                    <label>Manage Customers</label>
                    <input asp-for="CanManageCustomers" />
                </div>
                <div class="col-md-4">
                    <label>Manage Landing </label>
                    <input asp-for="CanManageLandingDetails" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <label>Manage Bookings</label>
                    <input asp-for="CanManageBookings" />
                </div>
                <div class="col-md-4">
                    <label>Manage Drivers</label>
                    <input asp-for="CanManageDrivers" />
                </div>
                <div class="col-md-4">
                    <label>Manage States</label>
                    <input asp-for="CanManageLocation" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <label>Manage Enquires</label>
                    <input asp-for="CanManageEnquires" />
                </div>
                <div class="col-md-5">
                    <label>Manage Application Users</label>
                    <input asp-for="CanManageApplicationUsers" />
                </div>
                <div class="col-md-3">
                    <label>Manage Prices</label>
                    <input asp-for="CanManagePrices" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-5">
                    <label>Manage Passengers </label>
                    <input asp-for="CanManagePassengersInformation" />
                </div>
            </div>
        </div>
    </div>

    <!--MODAL FOOTER-->
    <div class="modal-footer">
        <div class="row pull-right">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
