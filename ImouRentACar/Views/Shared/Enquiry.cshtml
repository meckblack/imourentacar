@model ImouRentACar.Models.Enquiry

<div class="jumbbotron" style="padding-top: 50px; padding-bottom: 50px; background-color: #473454">
    <div class="feturedsection text-center">
        <h1 style="font-size:40px; text-align: center; color: white; text-shadow: 1px 1px 2px #473454, 0 0 25px #765c6c, 0 0 5px #765c6c;" class="text-center"><span class="bdots">&bullet;</span>E N Q U I R Y<span class="carstxt">F O R M</span>&bullet;</h1>
    </div>
    <div class="row">
        <div class="col-md-offset-4 col-md-4 col-md-offset-4 col-sm-offset-3 col-sm-6 col-sm-offset-3">
            <form asp-action="Enquiry" asp-controller="Enquiry">
                <input type="text" asp-for="FirstName" style="color: black; font-weight:500;" class="form-control name-form" placeholder="First Name" />
                
                <input type="text" asp-for="LastName" style="color: black; font-weight:500;" class="form-control email-form" placeholder="Last Name" />
                
                <input type="text" asp-for="Organization" style="color: black; font-weight:500;" class="form-control subject-form" placeholder="Organization Name" />
                
                <input type="text" asp-for="Email" style="color: black; font-weight:500;" class="form-control subject-form" placeholder="Email Address" />
                
                <textarea type="text" asp-for="Comment" style="color: black; font-weight:500;" class="form-control subject-form" placeholder="Comments" ></textarea>
                
                <button data-modal="" type="submit" asp-action="Enquiry" asp-controller="Enquiry" style="background-color: #020243; color: white;" class="btn btn-submit">Submit</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
