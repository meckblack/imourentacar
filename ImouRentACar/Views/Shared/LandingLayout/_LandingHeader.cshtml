<!-- Header -->
<div class="allcontain">
    <div class="header">
        <ul class="socialicon">
            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
            <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
        </ul>
        <ul class="givusacall" style="font-family: montserrat; ">
            <li>Give us a call : @ViewData["contactnumber"] </li>
        </ul>
        @if (TempData["customername"] == null || Convert.ToString(TempData["customername"]) == " ")
        {
            <ul class="logreg" style="font-family: montserrat; ">
                <li><a asp-action="SignIn" asp-controller="Customer">SignIn </a> </li>
                <li><a asp-action="Register" asp-controller="Customer"><span class="register">Register</span></a></li>
            </ul>
        }
        else
        {
            <ul class="logreg" style="font-family: montserrat; ">
                <li><a asp-action="ChangePassword" asp-controller="Customer"> Change Password</a></li>
                <li><a asp-action="SignOut" asp-controller="Customer"><span class="register">LogOut</span></a></li>
            </ul>
        }
    </div>
    <!-- Navbar Up -->
    <nav class="topnavbar navbar-default topnav">
        @if (TempData["customername"] == null || Convert.ToString(TempData["customername"]) == " ")
        {
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed toggle-costume" data-toggle="collapse" data-target="#upmenu" aria-expanded="false">
                        <span class="sr-only"> Toggle navigaion</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand logo" asp-controller="Home" asp-action="Index"><img style="height: 50px; width: 190px;" src="~/UploadedFiles/Logo/@ViewData["imageoflogo"]" alt="logo"></a>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="upmenu" style="padding-left: 140px;">
                <ul class="nav navbar-nav" id="navbarontop">
                    <li class="active"><a asp-action="Index" asp-controller="Home"  style="font-family: montserrat; font-weight:600">HOME</a> </li>
                    <li>
                        <a asp-action="ViewAllCars" asp-controller="Car"  style="font-family: montserrat; font-weight:600">CARS</a>
                    </li>
                     <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"  style="font-family: montserrat; font-weight:600">USE OUR SERVICES<span class="caret"></span></a>
                        <ul class="dropdown-menu dropdowncostume">
                            <li><a asp-action="Book" asp-controller="OneWayTrip" style="font-family: montserrat; font-weight:600">ONE WAY TRIP</a></li>
                            <li><a asp-action="Book" asp-controller="TwoWayTrip" style="font-family: montserrat; font-weight:600">TWO WAY TRIP</a></li>
                            <li><a asp-action="Book" asp-controller="RentACar" style="font-family: montserrat; font-weight:600">RENT A CAR</a></li>
                        </ul>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Contact" style="font-family: montserrat; font-weight:600">CONTACT US</a>
                    </li>
                </ul>
            </div>
        }
        else
        {
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed toggle-costume" data-toggle="collapse" data-target="#upmenu" aria-expanded="false">
                        <span class="sr-only"> Toggle navigaion</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand logo" asp-controller="Home" asp-action="Index"><img style="height: 50px; width: 190px;" src="~/UploadedFiles/Logo/@ViewData["imageoflogo"]" alt="logo"></a>
                </div>
            </div>
            <div class="collapse navbar-collapse" id="upmenu" style="padding-left: 140px">
                <ul class="nav navbar-nav" id="navbarontop">
                    <li class="active"><a asp-action="Index" asp-controller="Home">HOME</a> </li>
                    <li>
                        <a asp-action="ViewAllCars" asp-controller="Car">CARS</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Rent With Us <span class="caret"></span></a>
                        <ul class="dropdown-menu dropdowncostume">
                            <li><a asp-action="Book" asp-controller="OneWayTrip">One Way Trip</a></li>
                            <li><a asp-action="Book" asp-controller="TwoWayTrip">Two Way Trip</a></li>
                            <li><a asp-action="Book" asp-controller="RentACar">Rent A Car</a></li>
                        </ul>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Contact">Contact Us</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">WELCOME @TempData["customername"] <span class="caret"></span></a>
                        <ul class="dropdown-menu dropdowncostume">
                            <li><a asp-action="ViewProfile" asp-controller="Customer">View Profile</a></li>
                            <li><a asp-action="ViewOneWayTrips" asp-controller="Customer">View One Way Trips</a></li>
                            <li><a asp-action="ViewTwoWayTrips" asp-controller="Customer">View Two Way Trips</a></li><li>
                            <a asp-action="ViewCarRentals" asp-controller="Customer">View Car Rental</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        }
    </nav>
</div>