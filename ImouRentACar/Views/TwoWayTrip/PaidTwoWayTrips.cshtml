@model IEnumerable<ImouRentACar.Models.TwoWayTrip>
@using ImouRentACar.Models.Enums;

@{
    ViewData["Title"] = "Paid";
    Layout = "~/Views/Shared/AdminLayout/_AdminLayout.cshtml";
    var x = 1;
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        PAID TWO WAY TRIPS
    </h1>
    <ol class="breadcrumb" style="padding-bottom: 10px">
        <li><a asp-controller="Admin" asp-action="Dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active">Paid Two Way Trips</li>
    </ol>


</section>

<!-- Main content -->
<section class="content">
    @if (TempData["twowaytrip"] != null)
    {
        if (TempData["notificationType"].Equals(NotificationType.Success.ToString()))
        {
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                @TempData["twowaytrip"]
            </div>
        }
        else if (TempData["notificationtype"].Equals(NotificationType.Error.ToString()))
        {
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                @TempData["twowaytrip"]
            </div>
        }
        else if (TempData["notificationtype"].Equals(NotificationType.Info.ToString()))
        {
            <div class="alert alert-info alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                @TempData["twowaytrip"]
            </div>
        }

    }
    <!-- Default box -->
    <div class="box">
        <div class="box-body">
            <table class="table" id="myTable">
                <thead>
                    <tr>
                        <th>
                            S/N
                        </th>
                        <th>
                            Request Booking Date
                        </th>
                        <th>
                            Booking Number
                        </th>
                        <th>
                            Amount( &#8358 )
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @(x++)
                        </td>
                        <td>
                            @item.DateSent
                        </td>
                        <td>
                            @item.BookingNumber
                        </td>
                        <td>
                            &#8358 @item.TotalBookingPrice
                        </td>
                        <td>
                            @if (item.Verification == Verification.Completed)
                            {
                                <a class="btn btn-info btn-sm" data-modal="" asp-action="SetCarAvaliable" asp-route-id="@item.CarId"><i class="fa fa-book "></i> Set Car Avaliable</a>
                                <a class="btn btn-info btn-sm" data-modal="" asp-action="ViewBookingDetails" asp-route-id="@item.TwoWayTripId"><i class="fa fa-book "></i> Details</a>
                                @if (Convert.ToString(ViewData["userrole"]) == "SuperUser")
                                {
                                    <a class="btn btn-info btn-sm" data-modal="" asp-action="Delete" asp-route-id="@item.TwoWayTripId"><i class="fa fa-book "></i> Delete</a>
                                }
                            }
                            <a class="btn btn-info btn-sm" data-modal="" asp-action="ViewBookingDetails" asp-route-id="@item.TwoWayTripId"><i class="fa fa-book "></i> Details</a>
                            <a class="btn btn-info btn-sm" data-modal="" asp-action="Completed" asp-route-id="@item.TwoWayTripId"><i class="fa fa-book "></i> Completed Trip</a>

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

<script src="~/Admin/bower_components/jquery/dist/jquery.js"></script>
<script src="~/Modal/Modal.js"></script>

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            columnDefs: [
                {
                    targets: [0, 1, 2],
                    className: 'dataTable'
                }
            ]
        });
    });
</script>
